@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="p-3">
    <div class="col-md-4 p-3 text-light container border border-success rounded-lg">

        <h2>@ViewData["Title"]</h2>
        <hr class="border-success" />
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Admin"></label>
                <input asp-for="Admin" />
            </div>

            <div class="form-group">
                <label asp-for="FstName"></label>
                <input asp-for="FstName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="LstName"></label>
                <input asp-for="LstName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="About"></label>
                <input asp-for="About" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Birthday"></label>
                <input type="date" asp-for="Birthday" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Gender"></label> <br />
                <l>Male</l>
                <input type="radio" value="Male" asp-for="Gender" />
                <l>Female</l>
                <input type="radio" value="Female" asp-for="Gender" />
            </div>


            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>
            <button type="submit" class="btn btn-outline-success">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
