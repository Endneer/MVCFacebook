@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext Context
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCFacebook</title>

   <style>

       h2,label,p {
           color:ghostwhite;
       }

       #frBtn
       {
           position:relative;
           left:52%;
           top:200px;
       }
       #acpBtn 
       {
           position:relative;
           top:-50px;
           right:80px;
       }
       #rejBtn {
           position: relative;
          top:-50px;
       }
       #rejBtn2 {
           position: relative;
           top: 2px;
       }
       .profilePagePostsContainer {
           margin: auto;
           position: absolute;
           right: 1%;
           top: 15%;
           width: 45%;
           text-align: center;
       }
       .profilePageInfo {
           margin: auto;
           position: absolute;
           left: 1%;
           top: 15%;
           width: 45%;
           text-align: left;
           color: white;
       }
       .profilePic{
           position:relative;
           width:50%;
           height:300px;
           border-radius:180px;
       }
       .btn-file {
           position: relative;
           overflow: hidden;
          margin-bottom:5px;
       }

       .btn-file input[type=file] {
               position: absolute;
               top: 0px;
               right: 0;
               min-width: 100%;
               min-height: 100%;
               font-size: 100px;
               text-align: right;
               filter: alpha(opacity=0);
               opacity: 0;
               outline: none;
               cursor: inherit;
               display: block;
           }
       #profileUserName
       {
           position:absolute;
           top:10%;
           left:51%;
           text-align:right;
           font-size:45px;
           display:block;
       }
       .profileBio {
           text-align: left;
           border:solid;
           border-color: rgb(40, 167, 69);
       }
       .bioInfo {
           color: rgb(40, 167, 69);
       }
       .PageContainer {
           margin: auto;
           width: 600px;
           text-align: center;
       }

       .post-container {
           border-radius: 10px;
           margin-bottom: 10px;
           color: ghostwhite;
           position: relative;
           text-align:left;
           padding:10px;
       }

       .post-text {
           border-style: solid;
           border-width: 1px;
           border-radius: 10px;
           position: relative;
           border-color: rgb(40, 167, 69);
           padding: 10px;
           margin-bottom:5px;
       }

       .comment_list {
           border-style: solid;
           border-width: 1px;
           border-radius: 10px;
           position: relative;
           border-color: rgb(40, 167, 69);
           padding: 10px;
           margin-bottom: 5px;
           margin-top: 5px;
       }

       .comment-box {
           width:79%;
           height:38px;
           vertical-align:bottom;
       }

       .comment-submit {
           width: 20%;
           vertical-align: bottom;
       }

       .del-button {
           font-size: 15px;
           position: absolute;
           top: 0;
           right: 0;
           color: red;
           border-style: solid;
           border-color: white;
           border-width: 3px
       }



       .PostButtonContainer {
           text-align: right;
           margin-bottom: 10px;
           margin-top: 5px;
       }

       textarea 
       {
           width:100%;
           min-height:100px;
           max-height:100px;

       }

       .my-body {
           background-color: rgb(33, 37, 41);
       }
   </style>


   <environment include="Development">
       <link rel="stylesheet" href="~/bootstrap-4.3.1-dist/css/bootstrap.css" />

       <link rel="stylesheet" href="~/css/site.css" />
   </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>

<body style="background-color:rgb(33, 37, 41);">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">


        <div class="navbar-collapse">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item">
                    <a class="nav-link">Placeholder</a>
                </li>

                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item active">
                        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" style="display:inline">
                            <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Profile/@UserManager.GetUserName(User)">@UserManager.GetUserName(User)</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" asp-controller="User" asp-action="Settings">Settings</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" asp-controller="User" asp-action="Home">Home</a>
                    </li>
                    @if (UserManager.IsInRoleAsync(Context.Users.FirstOrDefault(U => U.Id == UserManager.GetUserId(User)), "Admin").Result)
                    {
                        <li class="nav-item ">
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>
                    }

                }
            </ul>

            @if (SignInManager.IsSignedIn(User))
            {
                <form class="form-inline my-2 my-lg-0" method="get" asp-action="Search" asp-controller="User">
                    <input class="form-control mr-sm-2" name="searchText" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            }
            </div>

    </nav>

   

    <div class="my-body">
        @RenderBody()

    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
        <script>
            
        </script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
        <script>
            $("document").ready(function () {
                $.ajaxSetup({ cache: false });
            })
        </script>

        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
