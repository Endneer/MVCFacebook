@model MVCFacebook.Models.ApplicationUser

@{
    ViewData["Title"] = "EditInfo";
}

<br />
<br />
<br />
<br />

<div class="col-md-6 p-3 border-success border rounded-lg container">
    <h2>Edit User Info</h2>
    <hr class="border-success" />

    <form asp-action="EditInfo" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label><br />
            <input asp-for="FirstName" class="rounded-pill comment-box" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label><br />
            <input asp-for="LastName" class="rounded-pill comment-box" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Bio" class="control-label"></label><br />
            <input asp-for="Bio" class="rounded-pill comment-box" />
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BirthDate" class="control-label"></label><br />
            <input type="date" asp-for="BirthDate" class="rounded-pill comment-box" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Save" class="btn btn-outline-success my-2 my-sm-0 rounded-pill" />
        </div>
    </form>
</div>

