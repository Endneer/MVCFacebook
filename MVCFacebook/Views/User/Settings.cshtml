@model MVCFacebook.Models.UserViewModels.SettingsViewModel

<br />
<br />
<br />
<div class="col-md-6 p-3 border-success border rounded-lg container">
    <h2>Settings</h2>
    <hr class="border-success"/>
    <form asp-action="EditPassword" asp-controller="User" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <label>Enter your old password</label><br />
        <input type="password" asp-for="@Model.Old_Password" class="rounded-pill comment-box" /><br />
        <label>Enter the new password</label><br />
        <input type="password" asp-for="@Model.New_Password" class="rounded-pill comment-box" /><br />
        <label>Confirm password</label><br />
        <input type="password" asp-for="@Model.Confirm_Password" class="rounded-pill comment-box" /><br />
        <br />
        <input type="submit" class="btn btn-outline-success my-2 my-sm-0 rounded-pill" /><br />
    </form>

</div>
